@using eMarket.Core.Application.ViewModels.User
@model LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<section class="vh-100 gradient-custom">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-6 text-light">
                <div class="card shadow-sm margen bg-dark">
                    <div class="px-5 ms-xl-4">
                        <i class="fas fa-user-check fa-4x me-3 pt-5 mt-xl-4" style="color: #0dcaf0;"></i>
                        <span class="h1 fw-bold mb-0">Inicio de sesion</span>
                    </div>

                    <div class="card-body">
                        @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                        <div class="d-flex align-items-center h-custom-2 px-5 ms-xl-4 mt-1 pt-xl-0 mt-xl-n5">
                            <form method="post" asp-controller="User" asp-action="Index" style="width: 23rem;">
                                <div class="form-outline mb-4">
                                    <label asp-for="Username" class="form-label">Nombre de usuario:</label>
                                    <input asp-for="Username" class="form-control form-control-lg" />
                                </div>

                                <div class="form-outline mb-4">
                                    <label asp-for="Password" class="form-label">Contraseña:</label>
                                    <input asp-for="Password" class="form-control form-control-lg" />
                                </div>

                                <div class="pt-1 mb-4">
                                    <button class="btn btn-info btn-lg btn-block" type="submit">Login</button>
                                </div>

                                <p>¿No tienes un usuario? <a asp-controller="User" asp-action="Register" class="link-info">Registrese aquí</a></p>

                            </form>
                        </div>
                    </div>
                </div>

            </div>
            <div class="col-sm-6 px-0 d-none d-sm-block">
                <img src="https://static.vecteezy.com/system/resources/previews/002/808/141/original/abstract-background-technology-security-of-the-future-world-vector.jpg"
                     alt="Login image" class="w-100 vh-100" style="object-fit: cover; object-position: left;">
            </div>
        </div>
    </div>
</section>
@using eMarket.Core.Application.ViewModels.Categories;
@model List<CategoryViewModel>
@{
    ViewData["Title"] = "Categories";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="bgfondoCardHeader text-light p-2 rounded-2 mb-1">
                <h1>Mantenimiento de Categorías</h1>
            </div>

            <div class="row mb-2">
                <div class="col-3 offset-9">
                    <a asp-controller="Category" asp-action="Create" class="btn btn-success">Crear nueva categoria</a>
                </div>
            </div>

            <div class="row">

                @if (Model == null || Model.Count == 0)
                {
                    <h2 class="text-light">No hay Categorias</h2>
                }
                else
                {
                    @foreach (CategoryViewModel item in Model)
                    {
                        <div class="col-4">
                            <div class="card shadow-sm mb-3">

                                <div class="card-body bgfondoCard">
                                    <h4 class="card-title">@item.Name</h4>
                                    <p class="card-text">@item.Description</p>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div class="btn-group">
                                            <a asp-controller="Category" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info">Editar</a>
                                            <a asp-controller="Category" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Borrar</a>
                                        </div>
                                    </div>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <small class="card-text mt-2 fs-6"> <b>Articulos:</b> @item.ArticlesQuantity - <b>Usuarios:</b> @item.UsersQuantity </small>
                                    </div>

                                </div>
                            </div>
                        </div>
                    }
                }
            </div>
        </div>
    </div>
</div>
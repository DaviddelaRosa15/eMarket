@using eMarket.Core.Application.ViewModels.Articles;
@model SaveArticleViewModel
@{
    ViewData["Title"] = "Eliminar articulo";
}

<div class="row">

    <div class="col-6 offset-3" >
        <div class="card">
            <div class="card-header bg-danger text-light">
                <h4>¿Está seguro que desea eliminar el Articulo @Model.Name?</h4>
            </div>
            <div class="card-body bgfondoCard">

                <form method="post" asp-controller="Article" asp-action="DeletePost">
                
                    <input type="hidden" asp-for="Id" />

                    <button type="submit" class="btn btn-danger">Eliminar</button>
                    <a asp-controller="Article" asp-action="Index" class="btn btn-warning">Cancelar</a>
                
                </form>

            </div>
        </div>
    </div>

</div>

